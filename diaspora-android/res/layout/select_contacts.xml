<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="fill_parent" android:background="@color/white">
	<RelativeLayout android:id="@+id/label_header"
		android:background="@drawable/home_actionbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:paddingLeft="6dip" android:layout_centerVertical="true"
			android:layout_alignParentLeft="true" android:textSize="20dip"
			android:gravity="center_vertical" android:layout_height="wrap_content"
			android:text="Select Contacts" android:textColor="@color/white"
			android:textStyle="bold" android:layout_gravity="left|center_vertical" />
		<Button android:paddingRight="18dip" android:paddingBottom="8dip"
			android:paddingLeft="18dip" android:paddingTop="8dip" android:text="Send"
			android:layout_height="wrap_content" android:textColor="@color/white"
			android:layout_width="wrap_content" android:background="@drawable/widgets_kennedy_blue_button_default"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"></Button>
	</RelativeLayout>
	<LinearLayout android:layout_width="match_parent" android:paddingLeft="4dip"
		android:orientation="vertical" android:layout_height="match_parent"
		android:gravity="center_vertical" android:layout_gravity="center|center_vertical">
		<CheckBox android:gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:id="@+id/checkBox1"
			android:layout_width="fill_parent" android:textColor="@color/black"
			android:text="Checkboxasdfasdf"></CheckBox>
		<CheckBox android:gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:id="@+id/checkBox2"
			android:layout_width="fill_parent" android:textColor="@color/black"
			android:text="Checkboxasdfasdf"></CheckBox>
		<CheckBox android:gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:id="@+id/checkBox3"
			android:layout_width="fill_parent" android:textColor="@color/black"
			android:text="Checkboxasdfasdf"></CheckBox>
		<CheckBox android:gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:id="@+id/checkBox4"
			android:layout_width="fill_parent" android:textColor="@color/black"
			android:text="Checkboxasdfasdf"></CheckBox>
		<CheckBox android:gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:id="@+id/checkBox5"
			android:layout_width="fill_parent" android:textColor="@color/black"
			android:text="Checkboxasdfasdf"></CheckBox>
	</LinearLayout>
</LinearLayout>
